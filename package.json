{
  "name": "proof-of-stake",
  "version": "1.0.0",
  "description": "freeCodeCamp Web3 curriculum project",
  "main": "node/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev:client": "cd client && npm run start",
    "dev:node": "npm run rollup:node && node node/bundle.js",
    "test": "node node/index.js",
    "build:quiz": "node ./utils/parser/index.js",
    "build:blockchain": "wasm-pack build blockchain --target nodejs",
    "rollup:node": "rollup node/index.js --file node/bundle.js --format cjs --config rollup.config.js",
    "rollup:utils": "rollup utils/websockets/index.js --file utils/websockets/bundle.js --format umd --name 'utils'"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShaunSHamilton/proof-of-stake.git"
  },
  "keywords": [
    "freeCodeCamp",
    "web3",
    "course",
    "curriculum",
    "proof",
    "of",
    "stake"
  ],
  "author": "Shaun Hamilton",
  "license": "CC-BY-SA-4.0",
  "bugs": {
    "url": "https://github.com/ShaunSHamilton/proof-of-stake/issues"
  },
  "homepage": "https://github.com/ShaunSHamilton/proof-of-stake#readme",
  "dependencies": {
    "blockchain": "file:blockchain/pkg"
  },
  "devDependencies": {
    "@rollup/plugin-wasm": "^5.1.2",
    "js-yaml": "^4.1.0",
    "nodemon": "^2.0.15",
    "rollup": "^2.70.1",
    "serve": "^13.0.2",
    "wasm-pack": "^0.10.2"
  }
}
